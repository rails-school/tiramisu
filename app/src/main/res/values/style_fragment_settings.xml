<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FragmentSettings" parent="MatchParentWrapContent.Vertical">
        <item name="android:padding">@dimen/layout_margin</item>
    </style>

    <style name="FragmentSettingsFieldset" parent="MatchParentWrapContent.Horizontal">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="FragmentSettingsIcon">
        <item name="android:layout_width">@dimen/medium_ic</item>
        <item name="android:layout_height">@dimen/medium_ic</item>

        <item name="android:layout_margin">@dimen/medium_margin</item>
    </style>

    <style name="FragmentSettingsLabel" parent="WrapContent">
        <item name="android:textSize">@dimen/title</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="FragmentSettingsField" parent="MatchParentWrapContent">
        <item name="android:layout_marginTop">@dimen/medium_margin</item>
        <item name="android:layout_marginBottom">@dimen/medium_margin</item>
        <item name="android:padding">@dimen/medium_margin</item>

        <item name="android:textSize">@dimen/subhead</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>

        <item name="android:background">@color/soft_gray</item>
    </style>

    <style name="FragmentSettingsSubmit" parent="WrapContent">
        <item name="android:paddingTop">@dimen/medium_margin</item>
        <item name="android:paddingBottom">@dimen/medium_margin</item>
        <item name="android:paddingLeft">@dimen/xlarge_margin</item>
        <item name="android:paddingRight">@dimen/xlarge_margin</item>
        <item name="android:layout_margin">@dimen/medium_margin</item>

        <item name="android:textSize">@dimen/subhead</item>
        <item name="android:textColor">@color/white</item>

        <item name="android:background">@color/green</item>
    </style>

    <style name="FragmentSettingsSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>

        <item name="android:layout_marginTop">@dimen/medium_margin</item>
        <item name="android:layout_marginBottom">@dimen/medium_margin</item>

        <item name="android:background">@color/soft_gray</item>
    </style>

    <style name="FragmentSettingsSeekbarHeadline" parent="MatchParentWrapContent">
        <item name="android:layout_margin">@dimen/medium_margin</item>

        <item name="android:textSize">@dimen/subhead</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="FragmentSettingsSeekBar" parent="MatchParentWrapContent">
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:layout_marginBottom">@dimen/small_margin</item>
    </style>

    <style name="FragmentSettingsSeekBarLabel" parent="HorizontalStretchable">
        <item name="android:layout_marginBottom">@dimen/medium_margin</item>
        <item name="android:paddingLeft">@dimen/small_margin</item>
        <item name="android:paddingRight">@dimen/small_margin</item>

        <item name="android:textSize">@dimen/body</item>
        <item name="android:textColor">@color/soft_gray</item>
    </style>

    <style name="FragmentSettingsSwitchLabel" parent="HorizontalStretchable">
        <item name="android:layout_marginLeft">@dimen/medium_margin</item>
        <item name="android:layout_marginRight">@dimen/medium_margin</item>

        <item name="android:textSize">@dimen/subhead</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="FragmentSettingsSwitch" parent="WrapContent">
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:layout_marginBottom">@dimen/small_margin</item>
    </style>
</resources>