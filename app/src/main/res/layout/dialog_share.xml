<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    style="@style/DialogShare"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <ImageView
        android:id="@+id/dialog_share_text"
        android:src="@drawable/ic_sms"
        style="@style/DialogShareIcon"
        />

    <ImageView
        android:id="@+id/dialog_share_email"
        android:src="@drawable/ic_email"
        android:layout_toRightOf="@id/dialog_share_text"
        style="@style/DialogShareIcon"
        />

    <ImageView
        android:id="@+id/dialog_share_facebook"
        android:src="@drawable/ic_facebook"
        android:layout_below="@id/dialog_share_text"
        style="@style/DialogShareIcon"
        />

    <ImageView
        android:id="@+id/dialog_share_twitter"
        android:src="@drawable/ic_twitter"
        android:layout_below="@id/dialog_share_email"
        android:layout_toRightOf="@id/dialog_share_facebook"
        style="@style/DialogShareIcon"
        />

</RelativeLayout>