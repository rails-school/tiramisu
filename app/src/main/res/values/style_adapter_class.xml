<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AdapterClassWrapper" parent="MatchParentWrapContent.Vertical">
        <item name="android:padding">@dimen/medium_margin</item>
    </style>

    <style name="AdapterClass" parent="MatchParentWrapContent.Vertical">
        <item name="android:background">@color/white</item>
    </style>

    <style name="AdapterClassHeadline" parent="MatchParentWrapContent">
        <item name="android:layout_marginTop">@dimen/horizontal_layout_margin</item>
        <item name="android:layout_marginBottom">@dimen/small_margin</item>
        <item name="android:paddingLeft">@dimen/vertical_layout_margin</item>
        <item name="android:paddingRight">@dimen/vertical_layout_margin</item>

        <item name="android:textSize">@dimen/title</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AdapterClassTeacher" parent="MatchParentWrapContent">
        <item name="android:paddingLeft">@dimen/vertical_layout_margin</item>
        <item name="android:paddingRight">@dimen/vertical_layout_margin</item>
        <item name="android:layout_marginBottom">@dimen/small_margin</item>

        <item name="android:textSize">@dimen/subhead</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="AdapterClassDigest" parent="MatchParent">
        <item name="android:paddingLeft">@dimen/vertical_layout_margin</item>
        <item name="android:paddingRight">@dimen/vertical_layout_margin</item>
        <item name="android:layout_marginBottom">@dimen/large_margin</item>

        <item name="android:textSize">@dimen/body</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="AdapterClassFooter" parent="MatchParentWrapContent.Horizontal">
        <item name="android:padding">@dimen/medium_margin</item>

        <item name="android:background">@color/super_soft_gray</item>
    </style>

    <style name="AdapterClassDate" parent="HorizontalStretchable">
        <item name="android:layout_marginRight">@dimen/medium_margin</item>

        <item name="android:textSize">@dimen/body</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="AdapterClassLocation" parent="WrapContent">
        <item name="android:textSize">@dimen/body</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:gravity">right</item>
    </style>
</resources>